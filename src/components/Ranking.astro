                    </div>
                    <div class="win-rate">53.3%</div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .ranking-section {
        padding: 3rem 2rem;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        color: white;
    }

    .ranking-container {
        max-width: 1000px;
        margin: 0 auto;
    }

    .ranking-container h2 {
        text-align: center;
        font-size: 2.5rem;
        margin-bottom: 0.5rem;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.3);
    }

    .subtitle {
        text-align: center;
        font-size: 1.1rem;
        margin-bottom: 2.5rem;
        opacity: 0.9;
    }

    .ranking-list {
        display: flex;
        flex-direction: column;
        gap: 1rem;
    }

    .ranking-item {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-radius: 15px;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1.5rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .ranking-item:hover {
        transform: translateY(-2px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.2);
    }

    .first-place {
        background: linear-gradient(135deg, rgba(255, 215, 0, 0.3), rgba(255, 193, 7, 0.2));
        border: 2px solid gold;
    }

    .second-place {
        background: linear-gradient(135deg, rgba(192, 192, 192, 0.3), rgba(169, 169, 169, 0.2));
        border: 2px solid silver;
    }

    .third-place {
        background: linear-gradient(135deg, rgba(205, 127, 50, 0.3), rgba(184, 115, 51, 0.2));
        border: 2px solid #cd7f32;
    }

    .position {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 60px;
    }

    .trophy-icon {
        width: 30px;
        height: 30px;
        margin-bottom: 0.5rem;
    }

    .first-place .trophy-icon {
        color: gold;
    }

    .second-place .trophy-icon {
        color: silver;
    }

    .third-place .trophy-icon {
        color: #cd7f32;
    }

    .rank {
        font-weight: bold;
        font-size: 1.2rem;
    }

    .cuerda-info {
        flex: 1;
    }

    .cuerda-info h3 {
        margin: 0 0 0.5rem 0;
        font-size: 1.3rem;
    }

    .cuerda-info p {
        margin: 0;
        opacity: 0.8;
        font-size: 0.9rem;
    }

    .stats {
        display: flex;
        align-items: center;
        gap: 2rem;
    }

    .stat {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-width: 60px;
    }

    .stat .number {
        font-size: 1.5rem;
        font-weight: bold;
        color: #ffd700;
    }

    .stat .label {
        font-size: 0.8rem;
        opacity: 0.8;
    }

    .win-rate {
        background: rgba(40, 167, 69, 0.8);
        padding: 0.5rem 1rem;
        border-radius: 25px;
        font-weight: bold;
        font-size: 1.1rem;
    }

    @media (max-width: 768px) {
        .ranking-item {
            flex-direction: column;
            text-align: center;
            gap: 1rem;
        }

        .stats {
            justify-content: center;
            flex-wrap: wrap;
        }

        .ranking-container h2 {
            font-size: 2rem;
        }
    }
</style>
