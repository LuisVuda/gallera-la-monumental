// Componente para el ranking de cuerdas
---

<section class="ranking-section">
    <div class="ranking-container">
        <h2>Ranking de Cuerdas</h2>
        <p class="subtitle">Cuerdas con más peleas ganadas</p>
        
        <div class="ranking-list">
            <!-- Primer lugar -->
            <div class="ranking-item first-place">
                <div class="position">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="trophy-icon">
                        <path d="M12 2L15.09 8.26L22 9L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9L8.91 8.26L12 2Z"/>
                    </svg>
                    <span class="rank">1°</span>
                </div>
                <div class="cuerda-info">
                    <h3>Los Invencibles</h3>
                    <p>Propietario: Juan Carlos Méndez</p>
                </div>
                <div class="stats">
                    <div class="stat">
                        <span class="number">47</span>
                        <span class="label">Ganadas</span>
                    </div>
                    <div class="stat">
                        <span class="number">12</span>
                        <span class="label">Perdidas</span>
                    </div>
                    <div class="win-rate">79.7%</div>
                </div>
            </div>

            <!-- Segundo lugar -->
            <div class="ranking-item second-place">
                <div class="position">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="trophy-icon">
                        <path d="M12 2L15.09 8.26L22 9L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9L8.91 8.26L12 2Z"/>
                    </svg>
                    <span class="rank">2°</span>
                </div>
                <div class="cuerda-info">
                    <h3>Águilas Doradas</h3>
                    <p>Propietario: Roberto Silva</p>
                </div>
                <div class="stats">
                    <div class="stat">
                        <span class="number">42</span>
                        <span class="label">Ganadas</span>
                    </div>
                    <div class="stat">
                        <span class="number">18</span>
                        <span class="label">Perdidas</span>
                    </div>
                    <div class="win-rate">70.0%</div>
                </div>
            </div>

            <!-- Tercer lugar -->
            <div class="ranking-item third-place">
                <div class="position">
                    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="trophy-icon">
                        <path d="M12 2L15.09 8.26L22 9L17 14.14L18.18 21.02L12 17.77L5.82 21.02L7 14.14L2 9L8.91 8.26L12 2Z"/>
                    </svg>
                    <span class="rank">3°</span>
                </div>
                <div class="cuerda-info">
                    <h3>Relámpagos</h3>
                    <p>Propietario: María González</p>
                </div>
                <div class="stats">
                    <div class="stat">
                        <span class="number">38</span>
                        <span class="label">Ganadas</span>
                    </div>
                    <div class="stat">
                        <span class="number">22</span>
                        <span class="label">Perdidas</span>
                    </div>
                    <div class="win-rate">63.3%</div>
                </div>
            </div>

            <!-- Otros puestos -->
            <div class="ranking-item">
                <div class="position">
                    <span class="rank">4°</span>
                </div>
                <div class="cuerda-info">
                    <h3>Fuego del Sur</h3>
                    <p>Propietario: Carlos Ramírez</p>
                </div>
                <div class="stats">
                    <div class="stat">
                        <span class="number">35</span>
                        <span class="label">Ganadas</span>
                    </div>
                    <div class="stat">
                        <span class="number">25</span>
