---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import MainActions from '../components/MainActions.astro';
import GallosPeleas from '../components/GallosPeleas.astro';
import Ranking from '../components/Ranking.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
	<Header />
	<MainActions />
	<GallosPeleas />
	<Ranking />
	<Footer />
</Layout>

<style>
	/* Estilos globales para la página principal */
	:global(body) {
		margin: 0;
		padding: 0;
	}
	
	/* Animación suave para scroll */
	:global(html) {
		scroll-behavior: smooth;
	}
	
	/* Mejoras de accesibilidad */
	:global(*:focus) {
		outline: 2px solid #007bff;
		outline-offset: 2px;
	}
	
	/* Transiciones suaves */
	:global(button, a) {
		transition: all 0.3s ease;
	}
</style>
